- if @access_token.nil?
  %h1 You have to connect with salesforce!
  = link_to 'Connect here right now', :controller => 'authorizations', :action => 'oauth'
- else
  #left_column
    .status_notes 
      %h3 Open
    = @sticky_notes["records"]
    .status_notes
      %h3 In Progress
    .status_notes
      %h3 Resolved
    .status_notes
      %h3 Closed
  #right_column
    .title_nf.dark_stripe
      %h4.arrow-down.header-content Chatter News
    %br
    - @news_feed['records'].each do |nf|
      #news_feed
        %b.title= nf['CreatedBy']['Name']
        %br
        #user_photo
          = image_tag nf['FeedPost']['CreatedBy']['SmallPhotoUrl'], 'width' => '50', 'height' => '50'
        #user_body
          .body= nf['FeedPost']['Body']
          %br
          .date= nf['CreatedDate'].split('T')[0]
          %br
        %br
        .clear
  .clear
