!!!
%html
  %head
    %title Sticky Note
    = stylesheet_link_tag :all
    = stylesheet_link_tag 'http://fonts.googleapis.com/css?=Ubuntu'
    = javascript_include_tag :defaults
    = javascript_include_tag 'main.js'
    = csrf_meta_tag
  %body
    #wrapper
      #header
      #menu.dark_stripe
        = render :partial => 'layouts/menu', :locals => {:request => request}
        = form_tag search_pages_path do
          #search
            = text_field_tag 's', 'search...', :class => 'sbox', :tabindex => '1'
            = image_submit_tag '/images/search-icon-small-white.png', :tabindex => '2', :id => 'sbutton', :alt => 'Search'
      #section_info
        #info_text
          %h1 Connecting with SalesForce using Ruby on Rails
          .blurb lalalala H skjdsdskj
      #body
        - unless flash[:message].blank?
          .alert= flash[:message]
        = yield
      #footer.dark_stripe
        Derechos Reservados - Demos 2011
