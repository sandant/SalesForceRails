!!!
%html
  %head
    %title Sticky Note
    = stylesheet_link_tag :all
    = javascript_include_tag :defaults
    = csrf_meta_tag
  %body
    #wrapper
      #header
      #menu.dark_stripe
        %ul
          %li.active= link_to 'Sticky Note', :controller => 'pages', :action => 'index'
          %li= link_to 'Accounts', :controller => 'pages', :action => 'error'
          %li= link_to 'Contacts', :controller => 'pages', :action => 'error'
        %form
          #search
            %input{:value => 'search...', :class => 'sbox', :type => 'text', :name => 's', :tabindex => '1'}
            %input{:type => 'image', :alt => 'Search', :src => '/images/search-icon-small-white.png', :id => 'sbutton'}
      #section_info
        #info_text
          %h1 Connecting with SalesForce using Ruby on Rails
          .blurb lalalala H skjdsdskj
      #body
        = yield
      #footer.dark_stripe
        Derechos Reservados - Demos 2011
